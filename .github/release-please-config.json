{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    ".": {
      "release-type": "go",
      "include-component-in-tag": false,
      "include-v-in-tag": true,
      "changelog-path": "CHANGELOG.md",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "changelog-sections": [
        {
          "type": "feat",
          "section": "Features"
        },
        {
          "type": "fix",
          "section": "Bug Fixes"
        },
        {
          "type": "perf",
          "section": "Performance"
        },
        {
          "type": "refactor",
          "section": "Refactors"
        },
        {
          "type": "revert",
          "section": "Reverts"
        },
        {
          "type": "build",
          "section": "Build"
        },
        {
          "type": "ci",
          "section": "CI"
        },
        {
          "type": "docs",
          "section": "Documentation"
        },
        {
          "type": "test",
          "section": "Tests",
          "hidden": true
        },
        {
          "type": "chore",
          "section": "Chores",
          "hidden": true
        }
      ]
    }
  }
}
